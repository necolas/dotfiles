#!/bin/bash

run_help() {

cat <<EOT
macOS dotfiles - Nicolas Gallagher - http://nicolasgallagher.com/

Usage: $(basename "$0") [options]

Options:
    -h, --help      Print this help text
    -l, --link      Quick update: symlinks only (skips sync, packages, macOS)
    --macos         Apply macOS system settings only

Documentation can be found at https://github.com/necolas/dotfiles/

Copyright (c) Nicolas Gallagher
Licensed under the MIT license.
EOT

}
